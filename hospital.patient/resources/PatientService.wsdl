<?xml version="1.0" encoding="UTF-8"?>
<definitions targetNamespace="http://hospital/patient/" xmlns="http://schemas.xmlsoap.org/wsdl/" xmlns:patient="http://hospital/patient/" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:http="http://schemas.xmlsoap.org/wsdl/http/" xmlns:hos="http://hospital/schema/" xmlns:plnk="http://docs.oasis-open.org/wsbpel/2.0/plnktype" xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/">
  <types>
    <xsd:schema targetNamespace="http://hospital/patient/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
			<xsd:import namespace="http://hospital/schema/" schemaLocation="hospital.xsd"/>
		</xsd:schema>
  </types>
  <message name="notifyRequest">
    <part name="notification" element="hos:AgendaCallback">
    </part>
  </message>
  <portType name="patient">
    <operation name="notify">
      <input message="patient:notifyRequest">
    </input>
    </operation>
  </portType>
  <binding name="PatientBinding" type="patient:patient">
    <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
    <operation name="notify">
      <soap:operation soapAction="http://hospital/patient/notify"/>
      <input>
        <soap:body use="literal"/>
      </input>
    </operation>
  </binding>
  <service name="PatientService">
    <port name="patient" binding="patient:PatientBinding">
      <soap:address location="http://localhost:9080/hospital.patient/services/PatientService"/>
    </port>
  </service>
    <plnk:parterLinkType>
		<plnk:role name="patient" portType="patient:patient"/>
	</plnk:parterLinkType>
</definitions>
